<Window
    x:Class="Pilgrims.MediaFilesConverter.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogHost="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Pilgrims.MediaFilesConverter.Views"
    xmlns:vm="using:Pilgrims.MediaFilesConverter.ViewModels"
    Title="Pilgrims.MediaFilesConverter"
    d:DesignHeight="450"
    d:DesignWidth="800"
    SystemDecorations="BorderOnly"
    Icon="/Assets/avalonia-logo.ico"
    WindowState="Maximized"
    mc:Ignorable="d">

    <Grid RowDefinitions="Auto,*">
        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="LightGray">
            <MenuItem Header="Tools">
                <MenuItem Header="Utility Upgrade Manager" 
                          Click="OpenUtilityUpgradeModal_Click"/>
            </MenuItem>
        </Menu>

        <dialogHost:DialogHost Grid.Row="1" CloseOnClickAway="False" IsOpen="False">
            <dialogHost:DialogHost.DialogContent>
                <views:YouTubeDownloadModal x:Name="YoutubePage" />
            </dialogHost:DialogHost.DialogContent>
            <views:MainView />
        </dialogHost:DialogHost>
    </Grid>
</Window>
