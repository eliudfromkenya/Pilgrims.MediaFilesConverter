<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Light Theme Colors - Sky Blue Palette -->
    <Style>
        <Style.Resources>
            <!-- Primary Colors -->
            <SolidColorBrush x:Key="PrimaryBrush">#0EA5E9</SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryHoverBrush">#0284C7</SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryPressedBrush">#0369A1</SolidColorBrush>
            
            <!-- Background Colors -->
            <SolidColorBrush x:Key="BackgroundBrush">#F8FAFC</SolidColorBrush>
            <SolidColorBrush x:Key="SurfaceBrush">#FFFFFF</SolidColorBrush>
            <SolidColorBrush x:Key="CardBrush">#FFFFFF</SolidColorBrush>
            <SolidColorBrush x:Key="HeaderBrush">#E0F2FE</SolidColorBrush>
            
            <!-- Text Colors -->
            <SolidColorBrush x:Key="TextPrimaryBrush">#0F172A</SolidColorBrush>
            <SolidColorBrush x:Key="TextSecondaryBrush">#334155</SolidColorBrush>
            <SolidColorBrush x:Key="TextMutedBrush">#475569</SolidColorBrush>
            <SolidColorBrush x:Key="TextOnPrimaryBrush">#FFFFFF</SolidColorBrush>
            
            <!-- Input Control Colors -->
            <SolidColorBrush x:Key="InputBackgroundBrush">#FFFFFF</SolidColorBrush>
            <SolidColorBrush x:Key="InputBorderBrush">#CBD5E1</SolidColorBrush>
            <SolidColorBrush x:Key="InputBorderHoverBrush">#94A3B8</SolidColorBrush>
            <SolidColorBrush x:Key="InputBorderFocusBrush">#3B82F6</SolidColorBrush>
            <SolidColorBrush x:Key="InputPlaceholderBrush">#64748B</SolidColorBrush>
            
            <!-- Border Colors -->
            <SolidColorBrush x:Key="BorderBrush">#E2E8F0</SolidColorBrush>
            <SolidColorBrush x:Key="BorderHoverBrush">#CBD5E1</SolidColorBrush>
            
            <!-- Status Colors -->
            <SolidColorBrush x:Key="SuccessBrush">#10B981</SolidColorBrush>
            <SolidColorBrush x:Key="WarningBrush">#F59E0B</SolidColorBrush>
            <SolidColorBrush x:Key="ErrorBrush">#EF4444</SolidColorBrush>
            <SolidColorBrush x:Key="InfoBrush">#3B82F6</SolidColorBrush>
        </Style.Resources>
    </Style>

    <!-- Window Background -->
    <Style Selector="Window">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
    </Style>

    <!-- UserControl Background -->
    <Style Selector="UserControl">
        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}"/>
    </Style>

    <!-- Button Styles -->
    <Style Selector="Button.accent">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
    </Style>

    <Style Selector="Button.accent:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryHoverBrush}"/>
    </Style>

    <Style Selector="Button.accent:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource PrimaryPressedBrush}"/>
    </Style>

    <!-- Card Styles -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
    </Style>

    <!-- Header Styles -->
    <Style Selector="Border.header">
        <Setter Property="Background" Value="{DynamicResource HeaderBrush}"/>
    </Style>

    <!-- Text Styles -->
    <Style Selector="TextBlock.primary">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.secondary">
        <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
    </Style>

    <Style Selector="TextBlock.muted">
        <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}"/>
    </Style>

    <!-- NumericUpDown Style -->
    <Style Selector="NumericUpDown">
        <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style Selector="NumericUpDown:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource InputBorderFocusBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <!-- Modern TextBox Style for Light Theme -->
    <Style Selector="TextBox.modern">
        <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="SelectionBrush" Value="{DynamicResource PrimaryBrush}"/>
    </Style>
    
    <Style Selector="TextBox.modern:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource InputBorderFocusBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style Selector="TextBox.modern:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource InputBorderHoverBrush}"/>
    </Style>

    <!-- Modern ComboBox Style for Light Theme -->
    <Style Selector="ComboBox.modern">
        <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <Style Selector="ComboBox.modern:focus">
        <Setter Property="BorderBrush" Value="{DynamicResource InputBorderFocusBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
    </Style>

    <Style Selector="ComboBox.modern:pointerover">
        <Setter Property="BorderBrush" Value="{DynamicResource InputBorderHoverBrush}"/>
    </Style>

    <!-- ComboBoxItem Style for Light Theme -->
    <Style Selector="ComboBoxItem">
        <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="ComboBoxItem:selected">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
    </Style>

    <Style Selector="ComboBoxItem:pointerover">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
    </Style>

    <!-- CheckBox Style for Light Theme -->
    <Style Selector="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- Slider Style for Light Theme -->
    <Style Selector="Slider">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
    </Style>

    <!-- Progress Bar Style -->
    <Style Selector="ProgressBar">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
    </Style>

    <!-- ListBox Style for Light Theme -->
    <Style Selector="ListBox">
        <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="ListBoxItem">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
    </Style>

    <Style Selector="ListBoxItem:selected">
        <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="{DynamicResource TextOnPrimaryBrush}"/>
    </Style>

    <Style Selector="ListBoxItem:pointerover">
        <Setter Property="Background" Value="{DynamicResource SurfaceBrush}"/>
    </Style>
</Styles>